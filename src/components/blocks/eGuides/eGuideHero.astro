---
// Hero Section for Blog Posts
// ------------
// Description: A hero section (page header) for the post pages.
// Properties:
// - title: The title of the section (usually the title of the post)
// - categories: An array of categories for the post

// Components
// - Layout
import Section from '../../../components/ui/Section.astro'
import Row from '../../../components/ui/Row.astro'
import Col from '../../../components/ui/Col.astro'
// - UI
import Badge from '../../../components/ui/Badge.astro'
import Breadcrumbs from '../../../components/ui/Breadcrumbs.astro'

// Props
type Props = {
	categories?: any
	title: string
}
const { categories, title } = Astro.props
---

<Section id="post-intro" classes="bg-neutral-50 dark:bg-neutral-900">
	<Row>
		<Col span="12" align="center">
			<header class="post-header">
				<Breadcrumbs classes="mb-6" />
				<h1 class="post-header__title">
					{title}
				</h1>
			</header>
			{
				categories && (
					<div class="post-header__tags">
						{categories.map((category: string) => (
							<Badge
								name={category}
								link={`/eguides/categories/` + category}
								classes="capitalize"
							/>
						))}
					</div>
				)
			}
		</Col>
	</Row>
</Section>

<style>
	.page-header {
		@apply mx-auto max-w-4xl;
	}
	.page-header__text {
		@apply text-lg leading-relaxed;
	}
	.post-header__tags {
		@apply mt-6 flex flex-row items-center justify-center gap-2 pb-2;
	}
</style>
