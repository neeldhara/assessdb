---
// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - UI
import Hero from '../../components/blocks/hero/PageHeader.astro'
import BasicActivityFeed from '../../components/blocks/feeds/BasicActivityFeed.astro'
import CTA from '../../components/blocks/CTA/BasicLight.astro'

// Data
import roadmapData from '../../data/json-files/es/roadmapData.json'

// Content
// - SEO
const SEO = {
	title: 'Foxi | Actualizaciones y Mejoras de Versión',
	description:
		'Explora las potentes funciones de Foxi diseñadas para mejorar la productividad, garantizar la máxima seguridad e integrarse a la perfección con tus herramientas favoritas. ¡Únete a miles de usuarios satisfechos y transforma tu flujo de trabajo con Foxi hoy!'
}
// - Page Header
const header = {
	title: 'Próximas <strong>Funciones</strong> y Actualizaciones Clave',
	text: 'Descubre el futuro de Foxi con nuestra hoja de ruta. Aquí encontrarás información detallada sobre nuestras próximas funciones, mejoras y metas.'
}
// - CTA Data
const ctaData = {
	title: '¡Únete a la Revolución de Foxi!',
	text: 'Descubre por qué miles de profesionales confían en nuestra plataforma para optimizar su flujo de trabajo y mejorar la productividad. ¡Empieza hoy y comprueba la diferencia por ti mismo!',
	rating: {
		value: 5,
		text: '30K calificaciones de clientes'
	},
	button: {
		size: 'lg',
		style: 'primary',
		text: 'Empieza Ahora'
	}
}
---

<Layout title={SEO.title} description={SEO.description} lang="es">
	<Hero title={header.title} text={header.text} />
	<BasicActivityFeed data={roadmapData.data} />
	<CTA data={ctaData} />
</Layout>
