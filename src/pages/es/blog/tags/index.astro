---
// Blog Tags Page
// ------------
// Description: The blog tags page is a page that displays all the blog posts tagged with all the tags.

// Components
// - Layout
import Layout from '../../../../layouts/Layout.astro'
// - UI
import Hero from '../../../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'
const allPosts = await getCollection('blog', ({ id }) => {
	return id.startsWith('es/')
})
---

<Layout lang="es" noindex>
	<Hero title="Tags" />
	<BlogPosts data={allPosts} />
</Layout>
