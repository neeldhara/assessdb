---
// Blog Authors Page
// ------------
// Description: The blog authors page is a page that displays all the blog posts written by all the authors.

// Components
// - Layout
import Layout from '../../../../layouts/Layout.astro'
// - UI
import Hero from '../../../../components/blocks/hero/PageHeader.astro'
import BlogPosts from '../../../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'
const allPosts = await getCollection('blog', ({ id }) => {
	return id.startsWith('es/')
})
---

<Layout lang="es">
	<Hero title="Authors" />
	<BlogPosts data={allPosts} />
</Layout>
