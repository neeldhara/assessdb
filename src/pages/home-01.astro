---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/HomeCTAVideoPopUp.astro'
import Features from '../components/blocks/features/FeatureImageBlocks.astro'
import Testimonial from '../components/blocks/testimonials/BasicDark.astro'
import HighlightBlocks from '../components/blocks/highlights/HightlightRows.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import YoutubePopup from '../components/blocks/modal/VideoPopup.astro'

// Content
// - Backgrounds
import testimonialBackground from '../assets/testimonial-bg-03.webp'

// - SEO
const SEO = {
	title: 'Foxi | Your Productivity Toolkit',
	description:
		'Foxi is a powerful productivity toolkit designed to enhance your workflow and boost your productivity. With features like analytics, security, and integrations, Foxi is the perfect solution for your business.'
}
// - Hero Data
const heroData = {
	title: 'The most <strong>comprehensive</strong> User Management Platform',
	text: 'Need more than just a sign-in box? Clerk is a complete suite of embeddable UIs, flexible APIs, and admin dashboards to authenticate and manage your users. Start building for free.',
	actions: {
		neutral: {
			text: 'Contact sales'
		},
		primary: {
			text: 'Watch demo'
		}
	}
}
// - Features Data
import featureData from '../data/json-files/en/featureImageBlocks.json'
// - CTA Data
const ctaData = {
	title: 'Join Over 30,000 Satisfied Users!',
	text: 'Discover why thousands of professionals trust our platform to streamline their workflow and enhance productivity. Get started today and see the difference for yourself!',
	chipNotification: {
		text: '#1 Product of the Year',
		highlight: 'Product Hunt'
	},
	button: {
		size: 'lg',
		style: 'primary',
		text: 'Get started now!'
	}
}
// - Highlights Data
import highlightData from '../data/json-files/en/highlightData.json'
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero data={heroData} />
	<Features data={featureData} />
	<Testimonial
		blockquote="The Foxi theme is a breath of fresh air in the world of web development. Its speed and customization options are incredible. "
		figcaption="Satya Nadella"
		cite="CEO, Microsoft"
		bg={testimonialBackground}
		bgPosition="right"
	/>
	<HighlightBlocks data={highlightData} />
	<CTA data={ctaData} />
	<YoutubePopup lang="en" />
</Layout>
